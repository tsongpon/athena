# Athena API Environment Variables
# Copy this file to .env and update the values

# JWT Secret Key for signing tokens
# IMPORTANT: Use a strong random string in production (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production

# Database Configuration (for future PostgreSQL migration)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=athena
# DB_USER=athena
# DB_PASSWORD=changeme
# DB_SSL_MODE=disable

# Server Configuration
# SERVER_PORT=1323
# SERVER_HOST=0.0.0.0

# Token Configuration
# TOKEN_EXPIRATION_HOURS=24

# CORS Configuration
# CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
# CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOW_HEADERS=Accept,Authorization,Content-Type

# Logging
# LOG_LEVEL=info
# LOG_FORMAT=json
