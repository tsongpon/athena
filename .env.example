# Athena API Environment Variables
# Copy this file to .env and update the values

# ============================================
# JWT Authentication
# ============================================
# JWT Secret Key for signing tokens
# IMPORTANT: Use a strong random string in production (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production

# ============================================
# Storage Configuration
# ============================================
# Storage backend type: "memory" or "postgres"
# Default: memory
STORAGE_TYPE=postgres

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Database host (use "postgres" for Docker Compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=athena
DB_USER=athena_user
DB_PASSWORD=athena_password
DB_SSLMODE=disable

# ============================================
# Application Configuration
# ============================================
# API server port
API_PORT=1323

# ============================================
# Logging Configuration
# ============================================
# Environment: "development" or "production"
# production = JSON logs, development = console logs with colors
APP_ENV=production

# Log level: debug, info, warn, error, fatal
LOG_LEVEL=info

# ============================================
# Docker Compose Configuration (Optional)
# ============================================
# These override the defaults in docker-compose.yml

# SERVER_HOST=0.0.0.0
# TOKEN_EXPIRATION_HOURS=24

